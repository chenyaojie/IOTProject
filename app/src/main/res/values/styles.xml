<resources>
    <!--主UI主题-->
    <style name="Theme.AppCompat.MyFrame" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowAnimationStyle">@style/AnimationSlide</item>
    </style>

    <!--ToolBar主题-->
    <style name="Theme.AppCompat.MyToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="overlapAnchor">false</item>
        <item name="popupMenuStyle">@style/Theme.AppCompat.PopupMenu</item>
    </style>
    <!--Overflow呼出Menu主题-->
    <style name="Theme.AppCompat.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">-36dip</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="AnimationSlide">
        <item name="android:activityOpenEnterAnimation">@anim/anim_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_back_exit</item>
    </style>

    <style name="Material.Drawable.MyLinearProgress">
        <item name="lpd_maxLineWidth">75%</item>
        <item name="lpd_minLineWidth">10%</item>
        <item name="lpd_strokeSize">4dp</item>
        <item name="lpd_strokeColor">@color/icons</item>
        <item name="lpd_strokeSecondaryColor">@color/primary_dark</item>
        <item name="lpd_reverse">false</item>
        <!--<item name="lpd_travelDuration">1000</item>-->
        <!--<item name="lpd_transformDuration">600</item>-->
        <!--<item name="lpd_keepDuration">200</item>-->
        <item name="lpd_transformInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="pv_progressMode">indeterminate</item>
        <item name="lpd_inAnimDuration">@android:integer/config_mediumAnimTime</item>
        <item name="lpd_outAnimDuration">@android:integer/config_mediumAnimTime</item>
        <item name="lpd_verticalAlign">center</item>
    </style>
</resources>